<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_servers_reports_list" model="ir.ui.view" >
        <field name="name">Server Reports List</field>
        <field name="model">proeq.server</field>
        <field name="arch" type="xml">
            <list string="Reports">

                    <field name="name"/>
                    <field name="state"/>
                    <field name="description"/>
                    <field name="ip"/>
                    <field name="type"/>

            </list>
        </field>
    </record>

    <record id="action_servers_reports" model="ir.actions.act_window">
            <field name="name">Servers Reports</field>
            <field name="res_model">proeq.server</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new Server</p>
            </field>
    </record>

</odoo>